{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/usa.topojson",
        "format": {
            "type": "topojson",
            "feature": "states"
        }
    },
    "hconcat": [
        {
            "title": "Biden votes per state",
            "width": 600,
            "height": 600,
            "projection": { "type": "albersUsa" },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/clean_candidate_data.csv"
                        },
                        "key": "state",
                        "fields": [ "biden_votes" ]
                    }
                }
            ],
            "mark": { "type": "geoshape" },
            "encoding": {
                "color": {
                    "field": "biden_votes",
                    "type": "quantitative",
                    "title": "Total votes",
                    "scale": {
                        "type": "threshold",
                        "domain": [10000, 20000, 30000, 40000, 50000],
                        "range": ["#dadaeb", "#bcbddc", "#9e9ac8", "#756bb1", "#54278f"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "County"
                    },
                    {
                        "field": "biden_votes",
                        "type": "quantitative",
                        "title": "Votes"
                    }
                ]
            }
        },
        {
            "title": "Trump votes per state",
            "width": 600,
            "height": 600,
            "projection": { "type": "albersUsa" },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/clean_candidate_data.csv"
                        },
                        "key": "state",
                        "fields": [ "trump_votes" ]
                    }
                }
            ],
            "mark": { "type": "geoshape" },
            "encoding": {
                "color": {
                    "field": "trump_votes",
                    "type": "quantitative",
                    "title": "Total votes",
                    "scale": {
                        "type": "threshold",
                        "domain": [10000, 20000, 30000, 40000, 50000],
                        "range": ["#fcbba1", "#fc9272", "#fb6a4a", "#de2d26", "#a50f15"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "County"
                    },
                    {
                        "field": "trump_votes",
                        "type": "quantitative",
                        "title": "Votes"
                    }
                ]
            }
        }
    ]
}