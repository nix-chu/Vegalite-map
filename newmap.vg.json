{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "projection": { "type": "albersUsa" },
    "data": {
        "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/usa.topojson",
        "format": {
            "type": "topojson",
            "feature": "states"
        }
    },
    "hconcat": [
        {
            "title": "Voter turnout",
            "width": 500,
            "height": 600,
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/president_state.csv"
                        },
                        "key": "state",
                        "fields": [ "total_votes" ]
                    }
                }
            ],
            "mark": { "type": "geoshape" },
            "encoding": {
                "color": {
                    "field": "total_votes",
                    "type": "quantitative",
                    "title": "Total Votes",
                    "scale": {
                        "type": "log",
                        "range": ["#ccece6", "#005824"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name", 
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "total_votes",
                        "type": "quantitative",
                        "title": "Total Votes"
                    }
                ]
            }
        },
        {
            "title": "Population per state",
            "width": 500,
            "height": 600,
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/president_state.csv"
                        },
                        "key": "state",
                        "fields": [ "population_over18" ]
                    }
                }
            ],
        }
    ]
}