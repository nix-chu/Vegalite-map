{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/usa.topojson",
        "format": {
            "type": "topojson",
            "feature": "states"
        }
    },
    "vconcat": [
        {
            "title": "Biden votes per state",
            "width": 1000,
            "height": 400,
            "projection": { "type": "albersUsa" },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/clean_candidate_data.csv"
                        },
                        "key": "state",
                        "fields": [ "biden_votes" ]
                    }
                }
            ],
            "mark": { "type": "geoshape" },
            "encoding": {
                "color": {
                    "field": "biden_votes",
                    "type": "quantitative",
                    "title": "Total votes",
                    "scale": {
                        "type": "threshold",
                        "domain": [400000, 800000, 1200000, 1600000, 2000000, 2400000],
                        "range": ["#f2f0f7", "#dadaeb", "#bcbddc", "#9e9ac8", "#756bb1", "#54278f"]
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "County"
                    },
                    {
                        "field": "biden_votes",
                        "type": "quantitative",
                        "title": "Votes"
                    }
                ],
                "opacity": {
                    "condition": {
                        "param": "state_highlight",
                        "value": 1
                    },
                    "value": 0.2
                }
            },
            "params": [
                {
                    "name": "state_highlight",
                    "select": {
                        "type": "point",
                        "on": "mouseover",
                        "fields": [ "biden_votes" ]
                    }
                }
            ]
        },
        {
            "title": "",
            "width": 1000,
            "height": 200,
            "mark": { "type": "bar" },
            "data": {
                "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/clean_candidate_data.csv"
            },
            "encoding": {
                "x": { "field": "state" },
                "y": {
                    "field": "biden_proportion",
                    "type": "quantitative"
                },
                "opacity": {
                    "condition": {
                        "param": "state_highlight",
                        "value": 1
                    },
                    "value": 0.2
                }
            },
            "params": [
                {
                    "name": "state_highlight",
                    "select": {
                        "type": "point",
                        "on": "mouseover",
                        "fields": [ "biden_votes" ]
                    }
                }
            ]
        }
    ]
}