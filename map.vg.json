{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "I dont know yet",
    "projection": { "type": "equalEarth" },
    "data": {
        "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/usa.topojson",
        "format": {
            "type": "topojson",
            "feature": "usa"
        }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/president_state.csv"
                },
                "key": "state",
                "fields": [ "total_votes" ]
            }
        }
    ],
    "mark": { "type": "geoshape" },
    "encoding": {
        "color": {
            "field": "total_votes",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [10000, 100000, 500000],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            }
        },
        "tooltip": [
            {
                "field": "properties.name", 
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "total_votes",
                "type": "quantitative"
            }
        ]
    }
}