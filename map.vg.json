{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "I dont know yet",
    "projection": { "type": "equalEarth" },
    "data": {
        "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/usa.topo.json",
        "format": {
            "type": "topojson",
            "feature": "north_america.geo"
        }
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/nix-chu/Vegalite-map/master/president_state.csv"
                },
                "key": "state",
                "fields": [ "total_votes" ]
            }
        }
    ],
    "mark": { "type": "geoshape" },
    "encoding": {
        "color": {
            "field": "Total Votes",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "properties.name", 
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "total_votes",
                "type": "quantitative"
            }
        ]
    }
}